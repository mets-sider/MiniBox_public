<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MiniBoxController">
   <center>
      <VBox alignment="CENTER" prefHeight="150.0" prefWidth="250.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Text fill="#1dbce8" strokeType="OUTSIDE" strokeWidth="0.0" text="MiniBoxログイン" textAlignment="CENTER" wrappingWidth="120.0">
                     <font>
                        <Font size="14.0" />
                     </font></Text>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ユーザーID" />
                  <TextField fx:id="user_name" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" promptText="ユーザーID" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="パスワード" />
                  <TextField fx:id="password" alignment="CENTER" promptText="パスワード" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="nextButton" alignment="CENTER" mnemonicParsing="false" onAction="#OnClickedNextButton" text="ログイン" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
